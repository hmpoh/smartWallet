<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.tp.smartwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".Splash" />
        <activity android:name=".LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".Split" />
        <activity android:name=".History" />
        <activity android:name=".QR" />
        <activity android:name=".Inbox" />
        <activity
            android:name=".Chat"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".AllGroups" />
        <activity
            android:name=".FindPersonToPay"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".AmountToPay" />
        <activity android:name=".ConfirmPayment" />
        <activity android:name=".Receipt" />
        <activity
            android:name=".AddParticipantsToGroup"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".Transferring" />
        <activity
            android:name=".SetGroupBudget"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ConfirmGroupBudgetEqualSplit"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".GroupReceipt"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".TimeOut" />
        <activity
            android:name=".ManualSplitting"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".GroupScanToPay"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".GroupAmountToPay"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".GroupConfirmPayment"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".GroupTransferring"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".WarningInsufficientFunds" />
        <activity android:name=".ConfirmToPayGroup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>